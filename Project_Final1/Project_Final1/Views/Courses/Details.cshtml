@model Course

<h1>@ViewData["Title"] </h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Subject" class="form-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Subject
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Description" class="form-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
