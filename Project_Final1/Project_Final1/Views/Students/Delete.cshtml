@model Project_Final1.Models.Student

<h1>@ViewData["Title"] </h1>

<h3>Are you sure you want to delete this?</h3>

<hr />

<div>
    <form asp-action="Delete">
        <dl class="row">
            <dt class = "col-sm-2">
                <label asp-for="@Model.Name" class="form-label"></label>
            </dt>
            <dd class = "col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Department" class="form-label"></label>
            </dt>
            <dd class = "col-sm-10">
                @Model.Department
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.Phone" class="form-label"></label>
            </dt>
            <dd class = "col-sm-10">
                @Model.Phone
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.EnrollmentDate" class="form-label"></label>
            </dt>
            <dd class = "col-sm-10">
                @Model.EnrollmentDate
            </dd>
        </dl>
    
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </form>
</div>
