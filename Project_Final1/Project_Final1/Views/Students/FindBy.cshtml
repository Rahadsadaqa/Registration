@using ASPProject.Models
@model Project_Final1.Models.ViewModels.SearchStudent

<h1>@ViewData["Title"] </h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FindBy">
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select asp-for="Department" class="form-control" asp-items="@Html.GetEnumSelectList<eDepartment>()"></select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="@Model.Student.FirstOrDefault()!.Name"></label>


            </th>
            <th>
                <label asp-for="@Model.Student.FirstOrDefault()!.Department"></label>

            </th>
            <th>
                <label asp-for="@Model.Student.FirstOrDefault()!.Phone"></label>

            </th>
            <th>
                <label asp-for="@Model.Student.FirstOrDefault()!.EnrollmentDate"></label>


            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Student)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Department
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.EnrollmentDate
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
