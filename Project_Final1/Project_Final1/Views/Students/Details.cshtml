@model Student

<h1>@ViewData["Title"]</h1>

@{
    var registers = ViewBag.GPA as List<Register>;

    double GPA = 0;
    if (registers != null && registers.Any())
    {
        GPA = registers.Average(r => r.Grade);
    }
}

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Name" class="form-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Department" class="form-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Department
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Phone" class="form-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.EnrollmentDate" class="form-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.EnrollmentDate
        </dd>
        <dd class="col-sm-10">
            GPA:    @GPA.ToString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
